							<h3 class="card-title">{{ produit.name }}</h3>
							<p class="card-text">{{ produit.description }}</p>
							<p class="card-text">Prix:
								{{ produit.price }}â‚¬</p>
							<a href="#" class="btn btn-primary">Voir les details</a>
